{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "allowJs": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "outDir": "dist"
  },
  "include": [
    "./src/**/*.ts",
    "./bin/**/*.ts",
    "./config/*.ts",
    "./data/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "./dist"
  ]
}
